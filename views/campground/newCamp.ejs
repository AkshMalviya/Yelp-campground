<%- layout("/layouts/boilerplate") %>
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campground" method="post">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" name="campground[title]" id="title" >
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" class="form-control" name="campground[location]" id="location">
            </div>
            <div class="mb-3">
                <label for="imageurl" class="form-label">Image Url</label>
                <input type="text" class="form-control" name="campground[image]" id="imageurl">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id="price" name="campground[price]" aria-label="Amount (to the nearest dollar)">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="textarea" class="form-control" rows="3" name="campground[description]" id="description"></textarea>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Add Campground</button>
            </div>
        </form>
        <a href="/campgrounds" class="btn btn-outline-primary mb-3">Cancel</a>
    </div>
</div>

