<%- layout("/layouts/boilerplate") %>
<h1>All Campground</h1>
<a href="/campgrounds/add">Add new campground</a>
<ul>
    <% allCamps.forEach(element => { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= element.image %>" alt="" class="img-fluid">
                </div>
                <div class="col-md-8 mt-2">
                    <h5 class="card-title"><%= element.title %></h5>
                    <p class="card-text"> <%= element.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%- include("./geo-alt-fill.svg")  %> <%= element.location %></small>
                    </p>
                    <a href="/campgrounds/<%= element._id %>" class="btn btn-primary">View <%= element.title %></a>
                </div>
            </div>
        </div>
    <% }); %>
</ul>
